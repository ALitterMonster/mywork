<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.forest.dao.geographic.GeogDao">
    <select id="getGeogList" parameterType="java.lang.Integer" resultType="GeogInfo">
        SELECT t.* FROM geography_info t, operation_role_menu r 
        	WHERE t.menu_id = r.menu_id 
        	and  r.role_id in (select role_id from operation_user_role where user_id = #{userId});       
    </select>
    
    <select id="geogList" parameterType="GeogInfo" resultType="GeogInfo">
        SELECT t.* FROM geography_info t WHERE 1=1
        <if test="text != '' and text != null">
        	and menu_name like CONCAT(CONCAT('%',#{text}),'%')
        </if>
        	  
    </select>
    
    <!-- useGeneratedKeys设置为"true"表明要MyBatis获取由数据库自动生成的主键；keyProperty="id"指定把获取到的主键值注入到User的id属性 -->
	<insert id="insertGegoInfo"  parameterType="GeogInfo" useGeneratedKeys="true" keyProperty="id">
		insert into geography_info(menu_name,menu_url,description,parent_id) values (#{text},#{url},#{description},#{parentId});
	</insert>
	
	<update id="updateGeogInfo" parameterType="GeogInfo">
		update geography_info set menu_name=#{text},menu_url=#{url},description=#{description},parent_id = #{parentId} where menu_id=#{id}
	</update>
	
	<delete id="deleteGeogInfo" parameterType="int">
		delete from geography_info where user_id=#{userId}
	</delete>

</mapper>